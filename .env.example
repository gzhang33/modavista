# Dreamoda E-commerce Platform Environment Configuration Template
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 环境设置
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# ===========================================
# 数据库配置
# ===========================================
DB_HOST=localhost
DB_USER=your_database_username
DB_PASS=your_database_password
DB_NAME=your_database_name
DB_PORT=3306
DB_CHARSET=utf8mb4

# ===========================================
# 管理员账户配置
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_admin_password_hash

# ===========================================
# API密钥配置
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# 网站基础配置
# ===========================================
SITE_NAME=DreaModa Fashion Collection
SITE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com
API_BASE_URL=https://yourdomain.com/api

# ===========================================
# 安全配置
# ===========================================
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# ===========================================
# 文件上传配置
# ===========================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTS=jpg,jpeg,png,gif,webp
UPLOAD_DIR=storage/uploads

# ===========================================
# 邮件配置
# ===========================================
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=your_email_password_here
CONTACT_EMAIL=contact@yourdomain.com

# ===========================================
# 缓存配置
# ===========================================
CACHE_DRIVER=file
CACHE_TTL=3600

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=debug
LOG_FILE=storage/logs/app.log

# ===========================================
# CORS配置
# ===========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
