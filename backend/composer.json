{
  "name": "dreamoda/backend",
  "description": "Dreamoda E-commerce Platform Backend API",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "bacon/bacon-qr-code": "^3.0",
    "paragonie/sodium_compat": "^2.2",
    "pragmarx/google2fa": "^9.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Dreamoda\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "serve": "php -S localhost:8000 -t public"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
